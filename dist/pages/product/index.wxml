
    
    <form class="searchbar {{$Searchbar$inputKeyword ? 'inputing':''}} {{$Searchbar$skin}}" style="{{$Searchbar$style}}" report-submit="{{$Searchbar$true}}" bindsubmit="$Searchbar$formSubmit" bindreset="$Searchbar$formReset">
        <view class="wrapper">
            <input type="text" value="{{$Searchbar$inputKeyword}}" confirm-type="search" bindinput="$Searchbar$inputTyping" placeholder="搜索产品名"/>
            <button class="submit" form-type="submit"><text class="icon icon-search"/></button>
            <button class="cancel" form-type="reset">取消</button>
        </view>
    </form>

    <view class="catalog">
        <scroll-view class="catalog-nav" scroll-y="true">
            <button type="normal" class="nav-item active">产品</button>
            <button type="normal" class="nav-item">免费试喝</button>
            <button type="normal" class="nav-item">个性定制</button>
        </scroll-view>
        <scroll-view class="catalog-body" scroll-y="true">
            
    <view class="list-catalog {{$ListCatalog$skin}}" style="width:{{$ListCatalog$width}}rpx;padding:{{$ListCatalog$margin}}rpx;{{$ListCatalog$style}}">
        <block wx:for="{{$ListCatalog$datalist}}" wx:for-index="$ListCatalog$index" wx:for-item="$ListCatalog$item" wx:key="$ListCatalog$id">
            <navigator class="item-catalog" url="/pages/classify/{{$ListCatalog$item.id}}" rediect="{{$ListCatalog$rediect}}" hover-class="{{$ListCatalog$hoverClass}}" style="width:{{$ListCatalog$itemWidth}}rpx;padding:{{$ListCatalog$padding}}rpx;margin-top:{{$ListCatalog$index>=$ListCatalog$column?$ListCatalog$margin:0}}rpx">
                <view class="item-catalog-image" style="width:{{$ListCatalog$imageWidth}}rpx;height:{{$ListCatalog$imageHeight}}rpx;">
                    <image src="{{$ListCatalog$item.image}}" mode="aspectFill" lazy-load="{{$ListCatalog$lazyLoad}}"/>
                </view>
                <text class="item-catalog-name">{{$ListCatalog$item.name}}</text>
                
            </navigator>
        </block>
    </view>

        </scroll-view>
    </view>