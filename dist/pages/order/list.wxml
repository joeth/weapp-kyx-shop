
<view class="order-lst">
    <wxc-tab class="tabbar" line-color="transparent" active-line-color="{{colors.success}}" default-index="{{activeIndex}}" animate="{{true}}">
        <view class="tabbar-nav" slot="tablabel">
            <block  wx:for="{{orderTabs}}" wx:for-item="item" wx:key="{{item.id}}" tab-index="{{index}}">
                <wxc-tab-label class="tabbar-label {{activeIndex == index ? 'active' : ''}}">
                    <button class="tabbar-button" type="normal" bindtap="onTabClick" data-id="{{item.id}}" data-index="{{index}}">
                        {{item.name}}
                        <wxc-badge class="tabbar-badge" max="99" value="{{item.badge}}" wx:if="{{item.badge}}"/>
                    </button>
                </wxc-tab-label>
            </block>
        </view>
        <view class="tabbar-main">
            
    <view class="cp-order-list"  wx:for-items="{{$cpOrderList$datalist}}" wx:for-item="order" wx:key="oid">
        <view class="cp-order-item is-complete">
            <wxc-flex class="cp-order-head" main="between">
                <text class="cp-order-code">订单编号：{{order.code}}</text>
                <text class="cp-order-status">{{order.statusText}}</text>
            </wxc-flex>
            <navigator class="cp-order-main" url="/pages/order/detail?id={{order.id}}">
                <block wx:for="{{order.commodityList}}" wx:for-index="$cpOrderList$index" wx:for-item="$cpOrderList$commodity" wx:key="$cpOrderList$cid">
                    
    <wxc-flex class="cp-order-commodity">
        <image class="cp-commodity-cover" src="{{$cpOrderList$commodity.cover}}"/>
        <wxc-flex class="cp-commodity-main" dir="top" main="between">
            <view class="cp-commodity-info">
                <text class="cp-commodity-row cp-commodity-title">{{$cpOrderList$commodity.title}}</text>
                <text class="cp-commodity-row cp-commodity-text">{{$cpOrderList$commodity.type}}</text>
            </view>
            <wxc-flex class="cp-commodity-count" main="between" cross="center">
                <wxc-price class="price" value="{{$cpOrderList$commodity.price}}"/>
                <text class="count">x{{$cpOrderList$commodity.count}}</text>
            </wxc-flex>
        </wxc-flex>
    </wxc-flex>

                </block>
            </navigator>
            <view class="cp-order-foot">
                <wxc-flex class="cp-order-info" main="between" dir="right">
                    <view>合计（含运费）：<wxc-price class="price" value="{{order.actualAmount}}"/></view>
                </wxc-flex>
                <wxc-flex class="cp-order-tool" main="end" wrap="wrap">
                    <view class="cp-order-button" wx:if="{{order.status<2}}"><button type="warn">取消订单</button></view>
                    <view class="cp-order-button" wx:if="{{order.status==0}}"><button type="base">马上支付</button></view>
                    <view class="cp-order-button" wx:if="{{order.status==2}}"><button type="base">确认收货</button></view>
                    <view class="cp-order-button" wx:if="{{order.status==3}}">
                        <button type="base" wx:if="order.isCommented">查看订单</button>
                        <button type="base" wx:else>发表评价</button>
                    </view>
                </wxc-flex>
            </view>
        </view>
    </view>

        </view>
    </wxc-tab>
</view>