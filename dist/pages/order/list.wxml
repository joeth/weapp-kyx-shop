
<view class="order-lst">
    <wxc-tab class="tabbar" line-color="transparent" active-line-color="{{colors.success}}" default-index="{{activeKey}}" animate="{{true}}">
        <view class="tabbar-nav" slot="tablabel">
            <wxc-tab-label class="tabbar-label {{activeKey == index ? 'active' : ''}}"  wx:for="{{orderTabs}}" wx:for-item="tab" wx:key="{{tab.title}}" tab-index="{{index}}">
                <button class="tabbar-button" type="normal"  bind:tap="onTabClick" data-id="{{tab.id}}">
                    {{tab.title}}
                    <wxc-badge class="tabbar-badge" max="99" value="{{tab.badge}}" wx:if="{{tab.badge}}"/>
                </button>
            </wxc-tab-label>
        </view>
        <view class="tabbar-main">
            
    <view class="cp-order-list"  wx:for-items="{{$cpOrderList$datalist}}" wx:for-item="order" wx:key="oid">
        <view class="cp-order-item is-complete">
            <wxc-flex class="cp-order-head" main="between">
                <text class="cp-order-code">订单编号：{{order.code}}</text>
                <text class="cp-order-status">{{order.statusText}}</text>
            </wxc-flex>
            <navigator class="cp-order-main" url="/pages/order/detail?id={{order.id}}">
                <view class="cp-order-goods-list">
                    <block wx:for="{{order.goodsList}}" wx:for-index="$cpOrderList$index" wx:for-item="$cpOrderList$goods" wx:key="$cpOrderList$gid">
                        
    <wxc-flex class="cp-order-goods">
        <image class="cp-goods-cover" src="{{$cpOrderList$goods.cover}}"/>
        <wxc-flex class="cp-goods-main" dir="top" main="between">
            <view class="cp-goods-info">
                <text class="cp-goods-row cp-goods-title">{{$cpOrderList$goods.title}}</text>
                <text class="cp-goods-row cp-goods-text">{{$cpOrderList$goods.type}}</text>
            </view>
            <wxc-flex class="cp-goods-count" main="between" cross="center">
                <wxc-price class="cp-goods-price" decimal="small" value="{{$cpOrderList$goods.price}}"/>
                <text class="cp-goods-count">x{{$cpOrderList$goods.count}}</text>
            </wxc-flex>
        </wxc-flex>
    </wxc-flex>

                    </block>
                </view>
            </navigator>
            <view class="cp-order-foot">
                <wxc-flex class="cp-order-info" main="between" dir="right">
                    <view>合计（含运费）：<wxc-price class="cp-order-price" decimal="small" value="{{order.price+order.freight}}"/></view>
                </wxc-flex>
                <wxc-flex class="cp-order-tool" main="end" wrap="wrap">
                    <view class="cp-order-button" wx:if="{{order.status<2}}"><button type="warn">取消订单</button></view>
                    <view class="cp-order-button" wx:if="{{order.status==0}}"><button type="base">马上支付</button></view>
                    <view class="cp-order-button" wx:if="{{order.status==2}}"><button type="base">确认收货</button></view>
                    <view class="cp-order-button" wx:if="{{order.status==3}}"><button type="base">发表评价</button></view>
                    <view class="cp-order-button" wx:if="{{order.status==4}}"><button type="base">查看订单</button></view>
                </wxc-flex>
            </view>
        </view>
    </view>

        </view>
    </wxc-tab>
</view>