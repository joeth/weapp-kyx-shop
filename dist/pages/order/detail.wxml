
    <view class="order-detail">
        <view class="order-detail-head"/>
        <view class="order-detail-main"/>
        <view class="order-detail-foot">
            <view class="order-detail-freight"/>
            <view class="order-detail-info">
                <view><text>订单编号：</text>{{order.code}}</view>
                <view><text>成交时间：</text>{{order.createTime}}</view>
                <view  wx:if="{{order.expressName}}"><text>快递公司：</text>{{order.expressName}}</view>
                <view  wx:if="{{order.expressCode}}"><text>快递编号：</text>{{order.expressCode}}</view>
                <view wx:if="{{order.expressTime}}"><text>发货时间：</text>{{order.expressTime}}</view>
                <view wx:if="{{order.message}}"><text>留　　言：</text>{{order.message}}</view>
            </view>
            <view class="order-detail-tool">
                <view class="order-button" wx:if="{{order.status<2}}"><button type="warn">取消订单</button></view>
                <view class="order-button" wx:if="{{order.status==0}}"><button type="base">马上支付</button></view>
                <view class="order-button" wx:if="{{order.status==2}}"><button type="base">确认收货</button></view>
                <view class="order-button" wx:if="{{order.status==3}}"><button type="base">发表评价</button></view>
                <view class="order-button" wx:if="{{order.status==4}}"><button type="base">查看订单</button></view>
            </view>
        </view>
    </view>