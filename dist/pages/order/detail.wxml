
    <view class="order-detail">
        <view class="order-detail-consignee"/>
        <view class="order-detail-commodity">
            <block wx:for="{{order.commodityList}}" wx:for-index="index" wx:for-item="commodity" wx:key="cid">
                
    <wxc-flex class="cp-order-commodity">
        <image class="cp-commodity-cover" src="{{commodity.cover}}"/>
        <wxc-flex class="cp-commodity-main" dir="top" main="between">
            <view class="cp-commodity-info">
                <text class="cp-commodity-row cp-commodity-title">{{commodity.title}}</text>
                <text class="cp-commodity-row cp-commodity-text">{{commodity.type}}</text>
            </view>
            <wxc-flex class="cp-commodity-count" main="between" cross="center">
                <wxc-price class="price" decimal="small" value="{{commodity.price}}"/>
                <text class="count">x{{commodity.count}}</text>
            </wxc-flex>
        </wxc-flex>
    </wxc-flex>

            </block>
        </view>
        <view class="order-detail-amount">
            <wxc-flex class="freight" main="between" cross="center">
                <text>运费</text>
                <wxc-price decimal="small" value="{{order.freight}}"/>
            </wxc-flex>
            <wxc-flex class="amount" main="between" cross="center">
                <text>实付款（含运费）</text>
                <wxc-price decimal="small" value="{{order.freight+order.price}}"/>
            </wxc-flex>
        </view>
        <view class="order-detail-property">
            <view><text>订单编号：</text>{{order.code}}</view>
            <view><text>成交时间：</text>{{order.createTime}}</view>
            <view  wx:if="{{order.expressName}}"><text>快递公司：</text>{{order.expressName}}</view>
            <view  wx:if="{{order.expressCode}}"><text>快递编号：</text>{{order.expressCode}}</view>
            <view wx:if="{{order.expressTime}}"><text>发货时间：</text>{{order.expressTime}}</view>
            <view wx:if="{{order.message}}"><text>留　　言：</text>{{order.message}}</view>
        </view>
        <view class="order-detail-toolbar">
            <view class="order-button" wx:if="{{order.status<2}}"><button type="warn">取消订单</button></view>
            <view class="order-button" wx:if="{{order.status==0}}"><button type="base">马上支付</button></view>
            <view class="order-button" wx:if="{{order.status==2}}"><button type="base">确认收货</button></view>
            <view class="order-button" wx:if="{{order.status==3}}"><button type="base">发表评价</button></view>
            <view class="order-button" wx:if="{{order.status==4}}"><button type="base">查看订单</button></view>
        </view>
    </view>