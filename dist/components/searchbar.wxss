.searchbar{padding:20rpx;position:relative;z-index:100;border-bottom:2rpx solid #b9ae8b}.searchbar .wrapper{margin:0;padding:0 64rpx;height:64rpx;line-height:1;position:relative;border:2rpx solid #b9ae8b;border-radius:64rpx;background-color:#fff;transition:all ease 400ms}.searchbar input{min-height:0;height:64rpx;line-height:64rpx;width:100%;margin:0;padding:0;font-size:32rpx}.searchbar button{margin:0;padding:0;width:64rpx;height:64rpx;line-height:64rpx;background-color:transparent;font-size:40rpx;position:absolute;left:5rpx;top:0;z-index:10;transition:all ease .4s}.searchbar button:after{display:none;transform:none;box-shadow:none}.searchbar button.cancel{width:80rpx;left:200%;font-size:32rpx}.searchbar.inputing .wrapper{margin-right:80rpx}.searchbar.inputing .cancel{left:100%}